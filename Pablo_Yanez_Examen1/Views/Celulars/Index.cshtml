@model IEnumerable<Pablo_Yanez_Examen1.Models.Celular>

@{
    ViewData["Title"] = "Celulares";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col">
            <h2 class="text-primary">@ViewData["Title"]</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-lg"></i> Crear Nuevo Celular
            </a>
        </div>
    </div>

    <table class="table table-hover table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Modelo)</th>
                <th>@Html.DisplayNameFor(model => model.Año)</th>
                <th>@Html.DisplayNameFor(model => model.Precio)</th>
                <th>@Html.DisplayNameFor(model => model.pYanez.Name)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Modelo</td>
                    <td>@item.Año</td>
                    <td>@item.Precio.ToString("C")</td>
                    <td>@item.pYanez?.Name</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm me-2">
                            <i class="bi bi-pencil-fill"></i> Editar
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-2">
                            <i class="bi bi-eye-fill"></i> Ver
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash-fill"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
